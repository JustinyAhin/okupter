---
// Component Imports
import Navigation from "../components/Navigation.astro";
import Head from "../components/Head.astro";
import Footer from "../components/Footer.astro";

// Data
const { title, description, isHomePage, ogImage } = Astro.props;
---

<html lang="en">
  <head>
    <Head {title} {description} {isHomePage} {ogImage} />
  </head>

  <body class="text-lg text-secondary bg-neutral-100 okpt-sm-container">
    <Navigation />
    <main class="py-32 min-h-screen">
      <slot />
    </main>
    <Footer />
  </body>
</html>
