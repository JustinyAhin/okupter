---
// Component Imports
import Navigation from "../components/Navigation.astro";
import Head from "../components/Head.astro";
import Footer from "../components/Footer.astro";

// Data
const { title, description, isHomePage, ogImage } = Astro.props;
---

<html lang="en">
  <head>
    <Head {title} {description} {isHomePage} {ogImage} />
  </head>

  <body class="text-gray-800 bg-orange-10 font-helvetica selection:bg-indigo-50">
    <Navigation />
    <main>
      <slot></slot>
    </main>
    <Footer />
  </body>
</html>
