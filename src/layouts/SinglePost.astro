---
// Utilities
import { readableDate, readingTime } from "../assets/scripts/utils";

// Component Imports
import Base from "../layouts/Base.astro";

// Data
const { content } = Astro.props;
---

{content.status === "Public" ? (
  <>
    <Base title={content.title}>
      <article class="py-16 space-y-4">
        <header class="pb-8">
          <h1 class="font-georgia">{content.title}</h1>
          <p class="extra-small">
            {readableDate(content.datePublished)} -{" "}
            {readingTime(content.astro.html)} min read
          </p>
        </header>
        <slot />
      </article>
    </Base>
  </>
) : (
  <>
    <Base title="Post in draft">
      <h2>This post is still in draft, please come back later ðŸ˜‰.</h2>
    </Base>
  </>
)}
